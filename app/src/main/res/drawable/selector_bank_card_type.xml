<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:width="12dp" android:height="12dp">
                <shape android:shape="oval">
                    <solid android:color="@color/transparent" />
                    <stroke android:width="1.5dp" android:color="@color/colorPrimary" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <stroke android:width="2dp" android:color="#CECECE" />
        </shape>
    </item>
</selector>