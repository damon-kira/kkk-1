<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/kyc_dialog_hint"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            style="@style/marginLeftAndRight12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="@string/kyc_dialog_hint2"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/kyc_aiv_top_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/image_kyc_front" />

        <com.colombia.credit.view.textview.EasyTextView
            android:id="@+id/kyc_etv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:text="@string/kyc_dialog_front"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            app:etv_corner_type="circle"
            app:etv_solid="@color/color_ede1f7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/kyc_dialog_hint4"
            android:textColor="@color/color_ff3d3d"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kyc_tv_error1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="@string/kyc_dialog_left"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                app:drawableTopCompat="@drawable/image_kyc_front1" />

            <TextView
                android:id="@+id/kyc_tv_error2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="@string/kyc_dialog_mid"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                app:drawableTopCompat="@drawable/image_kyc_front2" />

            <TextView
                android:id="@+id/kyc_tv_error3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="@string/kyc_dialog_right"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                app:drawableTopCompat="@drawable/image_kyc_front3" />

        </LinearLayout>

        <TextView
            android:id="@+id/kyc_dialog_tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_apply_bg"
            android:paddingLeft="52dp"
            android:paddingTop="10dp"
            android:paddingRight="52dp"
            android:paddingBottom="10dp"
            android:text="@string/kyc_dialog_btn"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/kyc_aiv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/svg_kyc_close" />

</LinearLayout>