<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.colombia.credit.view.ToolbarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:tl_left_icon="@drawable/svg_left_back_gray"
        app:tl_text_gravity="center" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1.2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/image_face_failed" />

    <TextView
        style="@style/marginLeftAndRight16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:text="@string/face_failed_hint"
        android:textColor="@color/color_fe4f4f"
        android:textSize="14sp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.8" />

    <TextView
        android:id="@+id/failed_tv_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_apply_bg"
        android:paddingStart="72dp"
        android:paddingTop="12dp"
        android:paddingEnd="72dp"
        android:paddingBottom="12dp"
        android:text="@string/face_failed_btn"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="7" />
</LinearLayout>