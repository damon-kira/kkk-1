<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToolbarLayout">
        <attr name="tl_title" format="string|reference" />
        <attr name="tl_text_gravity">
            <enum name="left" value="1" />
            <enum name="center" value="2" />
            <enum name="right" value="3" />
        </attr>
        <attr name="tl_back_visibility">
            <enum name="visible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="tl_textsize" format="dimension"/>
        <attr name="tl_back_text_color" format="color" />
        <attr name="tl_left_icon" format="reference" />
        <attr name="tl_right_icon" format="reference" />
        <attr name="tl_right_icon_show" format="boolean" />
        <attr name="tl_right_point_bg" format="reference" />
        <attr name="tl_show_custom_icon" format="boolean" />
        <attr name="tl_custom_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ProcessView">
        <attr name="pv_curr_step" format="integer" />
    </declare-styleable>

    <declare-styleable name="BaseInfoView">
        <attr name="title" format="string" />
        <attr name="title_visiblity">
            <enum name="gone" value="0" />
            <enum name="visible" value="1" />
        </attr>
        <attr name="left_icon" format="reference" />
        <attr name="leftIcon_visiblity">
            <enum name="gone" value="0" />
            <enum name="visible" value="1" />
            <enum name="invisible" value="2" />
        </attr>

        <attr name="right_icon" format="reference" />
        <attr name="rightIcon_visiblity">
            <enum name="gone" value="0" />
            <enum name="visible" value="1" />
            <enum name="invisible" value="2" />
        </attr>
        <attr name="hint" format="string" />
        <attr name="max_length" format="integer" />
        <attr name="if_can_edit" format="boolean" />
        <attr name="inputType">
            <enum name="normal" value="-1" />
            <enum name="number" value="0" />
            <enum name="email" value="1" />
            <enum name="password" value="2" />
        </attr>
        <attr name="stringArray" format="reference" />
        <attr name="max_lines" format="integer" />
        <attr name="desc_text" format="string" />
        <attr name="desc_color" format="color" />
        <attr name="desc_has_icon" format="boolean" />
    </declare-styleable>

    <!--SuperTextView-->
    <declare-styleable name="EasyTextView">
        <attr name="etv_corner" format="dimension" />
        <attr name="etv_left_top_corner" format="dimension" />
        <attr name="etv_right_top_corner" format="dimension" />
        <attr name="etv_left_bottom_corner" format="dimension" />
        <attr name="etv_right_bottom_corner" format="dimension" />

        <attr name="etv_corner_type" format="enum">
            <enum name="circle" value="1" /><!-- radius是高度的一半，设置的corner失效 -->
            <enum name="normal" value="2" /><!-- radius是设置的 -->
        </attr>

        <attr name="etv_solid" format="reference|color" />
        <attr name="etv_stroke_width" format="dimension" />
        <attr name="etv_stroke_color" format="reference|color" />

        <!-- 背景颜色  -->
        <attr name="etv_bg_enabled_color" format="color" />
        <attr name="etv_bg_selected_color" format="color" />
        <attr name="etv_bg_pressed_color" format="color" />
        <!-- 文本颜色 -->
        <attr name="etv_text_enabled_color" format="color" />
        <attr name="etv_text_selected_color" format="color" />
        <attr name="etv_text_pressed_color" format="color" />

        <attr name="etv_bold_width" format="dimension" />

        <!-- 与etv_bold_width冲突，设置加粗后setv_bold_width失效 -->
        <attr name="etv_text_stroke" format="boolean" />
        <attr name="etv_text_stroke_color" format="reference|color" />
        <attr name="etv_text_stroke_width" format="dimension" />

        <attr name="etv_left_drawable_mode">
            <enum name="top" value="3" />
            <enum name="normal" value="1" />
            <enum name="bottom" value="4" />
        </attr>

        <attr name="etv_right_drawable_mode">
            <enum name="top" value="3" />
            <enum name="normal" value="1" />
            <enum name="bottom" value="4" />
        </attr>

        <attr name="etv_top_drawable_mode">
            <enum name="left" value="0" />
            <enum name="normal" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="etv_bottom_drawable_mode">
            <enum name="left" value="0" />
            <enum name="normal" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="etv_left_drawable_width" format="dimension" />
        <attr name="etv_left_drawable_height" format="dimension" />

        <attr name="etv_top_drawable_width" format="dimension" />
        <attr name="etv_top_drawable_height" format="dimension" />

        <attr name="etv_right_drawable_width" format="dimension" />
        <attr name="etv_right_drawable_height" format="dimension" />

        <attr name="etv_bottom_drawable_width" format="dimension" />
        <attr name="etv_bottom_drawable_height" format="dimension" />

        <!-- 背景渐变色 -->
        <attr name="etv_shader_enable" format="boolean" />
        <attr name="etv_shader_start_color" format="reference|color" />
        <attr name="etv_shader_center_color" format="reference|color" />
        <attr name="etv_shader_end_color" format="reference|color" />
        <attr name="etv_shader_mode" format="enum">
            <enum name="topToBottom" value="0" />
            <enum name="bottomToTop" value="1" />
            <enum name="leftToRight" value="2" />
            <enum name="rightToLeft" value="3" />
        </attr>

        <!-- 文案渐变色 -->
        <attr name="etv_text_shader_enable" format="boolean" />
        <attr name="etv_text_shader_start_color" format="reference|color" />
        <attr name="etv_text_shader_end_color" format="reference|color" />
        <attr name="etv_text_shader_mode" format="enum">
            <enum name="topToBottom" value="0" />
            <enum name="bottomToTop" value="1" />
            <enum name="leftToRight" value="2" />
            <enum name="rightToLeft" value="3" />
        </attr>

        <attr name="etv_span_text" format="string" />
        <attr name="etv_span_color" format="color" />
        <attr name="etv_span_style">
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="etv_span_text_size" format="dimension" />

        <attr name="etv_line_style">
            <enum name="normal" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="IdentityView">
        <attr name="iv_text" format="string|reference" />
        <attr name="iv_image" format="reference" />
    </declare-styleable>

    <declare-styleable name="TextViewDrawable">
        <attr name="drawableLeftWidth" format="reference|dimension" />
        <attr name="drawableLeftHeight" format="reference|dimension" />
        <attr name="drawableTopWidth" format="reference|dimension" />
        <attr name="drawableTopHeight" format="reference|dimension" />
        <attr name="drawableRightWidth" format="reference|dimension" />
        <attr name="drawableRightHeight" format="reference|dimension" />
        <attr name="drawableBottomWidth" format="reference|dimension" />
        <attr name="drawableBottomHeight" format="reference|dimension" />
        <attr name="isAlignCenter" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PeriodLayout">
        <attr name="pl_lock_visiblity" format="boolean" />
        <attr name="pl_text" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="TextViewLine">
        <attr name="tvl_center" format="boolean" />
        <attr name="tvl_isShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AccountItemLayout">
        <attr name="ail_left_icon" format="reference" />
        <attr name="ail_text" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="wl_text_select_color" format="color" />
        <attr name="wl_text_unselect_color" format="color" />
        <attr name="wl_item_select_bg_color" format="color" />
        <attr name="wl_view_bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ItemInfoLayout">
        <attr name="iil_left_text" format="string|reference" />
        <attr name="iil_left_text_color" format="color" />
        <attr name="iil_left_text_size" format="dimension" />
        <attr name="iil_left_text_bold" format="boolean"/>

        <attr name="iil_right_text" format="string|reference" />
        <attr name="iil_right_text_color" format="color" />
        <attr name="iil_right_text_size" format="dimension" />
        <attr name="iil_right_text_bold" format="boolean"/>

        <attr name="iil_line_show" format="boolean" />
    </declare-styleable>
</resources>