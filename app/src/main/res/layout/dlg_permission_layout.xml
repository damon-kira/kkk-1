<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/permission_hint_title"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/permission_hint"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/permission_hint2"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/dl_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="14dp"
                android:text="@string/permission_hint_text2"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:paddingRight="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_protocol"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:padding="4dp"
            app:srcCompat="@drawable/selector_checkbox_icon" />

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/permission_protocol"
            android:textColor="@color/color_333333"
            android:textSize="11sp" />
    </LinearLayout>

    <com.colombia.credit.view.textview.EasyTextView
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/permission_acepter"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:etv_bg_enabled_color="@color/color_80a152de"
        app:etv_corner="4dp"
        app:etv_solid="@color/colorPrimary" />

</LinearLayout>

